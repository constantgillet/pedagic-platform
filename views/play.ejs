<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>Histearn | Play</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="https://fonts.googleapis.com/css?family=Lato&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="<%= cssLink %>">
    <link rel="stylesheet" href="styles/play.css">
</head>
<body>
    <main>
        <section class="game__zone">
            <% if(gameType == 'punchedText') {%>

                <%- include('partials/punchedText') %>

            <% } else if(gameType == 'timeline') { %>

                <%- include('partials/timeline') %>

            <% } else if(gameType == 'multipleQuestion') { %>

                <%- include('partials/multipleQuestion') %>
    
            <% } else if(gameType == 'qcm') { %>

                <%- include('partials/qcm') %>
    
            <% } else if(gameType == 'pixelated') { %>

                <%- include('partials/pixelated') %>
        
            <% } else if(gameType == 'wordTable') { %>

                    <%- include('partials/wordTable') %>
            
            <% } %>
        
        </section>
    </main>
    <nav class="footer__nav">
        <ul class="footer__nav__items">
            <li class="footer__nav__home">
                <object type="image/svg+xml" data="../images/home.svg" width="50px" height="50px"></object>
            </li>
            <li class="footer__nav__mission">
                <object type="image/svg+xml" data="../images/mission.svg" width="50px" height="50px"></object>
            </li>
            <li class="footer__nav__profil">
                <object type="image/svg+xml" data="../images/profil.svg" width="50px" height="50px"></object>
            </li>
        </ul>
    </nav>
    <script id="game" src="<%= gameLink %>" level="<%= levelNumber %>" question="<%= question %>"></script>
</body>
</html>